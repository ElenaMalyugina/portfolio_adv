section.my-work

    div.triangle
        .triangle-item.triangle__left
            svg.svg__left.svg__left_works(width="200" height="150" viewBox="0 0 200 150" preserveAspectRatio="none")
                polygon.triangle__left(points="0,0 0,150 200,150")
        .triangle-item.triangle__right
            svg.svg__right.svg__right_works(width="200" height="150" viewBox="0 0 200 150" preserveAspectRatio="none" )
                polygon.triangle__left(points="200,0 200,150 0,150")
    div.my-work__headerbox
        .container.my_work__container
            //- чтобы не резался бэкгарунд и в то же время был контейнер на странице
            .my-work__back
                svg
                    use(xlink:href="assets/img/svg/sprite.svg#works_header")

                h2.big-header.my-work__header Мои работы
    div.my-works__slider
        .container.my_work__container
            div.controll
                a.saggitSl.saggit__pre(href="#")
                    svg
                        use(xlink:href="assets/img/svg/sprite.svg#arrow_down")
                a.saggitSl.saggit__next(href="#")
                    svg
                        use(xlink:href="assets/img/svg/sprite.svg#arrow_down")
            div.slider_window
                ul.slider__circ
                    -for(var i=0; i<slider.length; i++){
                        if(i==0)
                            li.slider-toggle.slider-toggle_active
                                a(href="#")
                                    span.toggle_slide
                                        span.toggle-in
                        else
                            li.slider-toggle
                                a(href="#")
                                    span.toggle_slide
                                        span.toggle-in
                    -}



                ul.slider__item
                    -for(var i=0; i<slider.length; i++){
                        if(i==0)
                            li.slider__li.slider__li_active(id=i)
                                div.slider__left
                                    img(src=slider[i].img)
                                div.slider__right
                                    h3.about-work__header=slider[i].name
                                    div.about-work__tech=slider[i].tech
                                    a.about-work__link(href=slider[i].href target="_blank")
                                        svg.about-work__icon
                                            use(xlink:href="assets/img/svg/sprite.svg#link")
                                        span.about-work__text-link Посмотреть сайт

                        else
                            li.slider__li(id=i)
                                div.slider__left
                                    img(src=slider[i].img)
                                div.slider__right
                                    h3.about-work__header=slider[i].name
                                    div.about-work__tech=slider[i].tech
                                    a.about-work__link(href=slider[i].href target="_blank")
                                        svg.about-work__icon
                                            use(xlink:href="assets/img/svg/sprite.svg#link")
                                        span.about-work__text-link Посмотреть сайт

                        -}


