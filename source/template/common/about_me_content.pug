section.about-me
    div.triangle
        .triangle-item.triangle__left
            svg.svg__left(width="200" height="150" viewBox="0 0 200 150" preserveAspectRatio="none")
                polygon.triangle__left(points="0,0 0,150 200,150" fill="#efeee9")
